
<%@page import="com.lorem.ipsum.model.logon.UserModel"%>
<%@page import="com.lorem.ipsum.commons"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%
UserModel user=null;
	String str = "";
if (request.getRequestURL().indexOf("welcome")!=-1)
	str = "><input type='checkbox' id='toggleRain' onclick='tgRain(this)''><label for='toggleRain'></label";
%>
<link rel="stylesheet" href="../css/topMenu.css">

<div class="toptool">
